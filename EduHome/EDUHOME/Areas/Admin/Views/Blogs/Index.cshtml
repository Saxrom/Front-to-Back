@model List<Blog>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog Table</h4>
                <a class="btn btn-primary" asp-action="create">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Reply</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td >@item.Title.Substring(0,20)...</td>
                                    <td style="max-width:250px">@(item.Content.Length > 100 ? item.Content.Substring(0, 100) : item.Content)</td>
                                    <td style="max-width:250px">@(item.Reply.Length > 100 ? item.Reply.Substring(0, 100) : item.Reply)</td>
                                    <td>
                                        <img style="width:100px;height:100px" src="~/assets/images/blog/@item.ImageUrl">
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <div style="display:inline-block">
                                            <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>