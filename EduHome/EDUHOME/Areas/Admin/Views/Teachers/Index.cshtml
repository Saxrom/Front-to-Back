@model List<Teacher>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Teacher Table</h4>
                <a class="btn btn-primary" asp-action="create">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Profession</th>
                                <th>Mail</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Profession</td>
                                    <td>@item.Mail</td>
                                    <td>
                                        <img style="width:100px;height:100px" src="~/assets/images/teacher/@item.Imageurl">
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <div style="display:inline-block">
                                            <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>