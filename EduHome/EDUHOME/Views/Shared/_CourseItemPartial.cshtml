@model CourseViewModel
<div class="col-md-4 col-sm-6 col-xs-12">
    <div class="single-course mb-70">
        <div class="course-img">
            <a asp-controller="courses" asp-action="details" asp-route-id="@Model.Id">
                <img src="~/assets/images/course/@Model.ImageUrl" alt="course">
                <div class="course-hover">
                    <i class="fa fa-link"></i>
                </div>
            </a>
        </div>
        <div class="course-content">
            <h3><a asp-controller="courses" asp-action="details" asp-route-id="@Model.Id">@Model.Name</a></h3>
            <p>@Model.About</p>
            <a class="default-btn" asp-controller="courses" asp-action="details" asp-route-id="@Model.Id">read more</a>
        </div>
    </div>
</div>